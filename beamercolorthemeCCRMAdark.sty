\ifsimpletheme
    \setbeamercolor{title}{fg=white}
    \setbeamercolor{subtitle}{fg=structure.fg!50!white}
    \setbeamercolor{frametitle}{fg=structure.fg}
    \setbeamercolor{framesubtitle}{fg=normal text.fg!50!frametitle.fg}
\else
    \setbeamercolor{title}{fg=CCRMAblue!5!white, bg=CCRMAblue}
    \setbeamercolor{subtitle}{fg=CCRMAblue!15!white}
    \setbeamercolor{frametitle}{fg=normal text.fg, bg=structure.fg!60!black}
    \setbeamercolor{framesubtitle}{fg=normal text.fg!80!structure.fg}
\fi

\setbeamercolor{subsection in toc}{fg=CCRMAblue!15!lightgray}
