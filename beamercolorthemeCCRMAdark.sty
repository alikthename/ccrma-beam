\definecolor{CCRMAblue}{RGB}{39, 70, 109} % this should probably be passed as an option
\setbeamercolor*{normal text}{fg=black!30!white,bg=CCRMAblue!20!black}
\setbeamercolor*{structure}{fg=CCRMAblue!70!normal text.fg}

\DeclareOption{gradient}
{
  \def\beamer@cta@do{
    \setbeamertemplate{background canvas}[vertical shading][bottom=CCRMAblue!26!black,top=CCRMAblue!15!black,middle=black]
  }
}
\ProcessOptions

\@ifundefined{beamer@cta@do}{}{\beamer@cta@do} % necessary to apply the gradient to the background

\mode<presentation>

\setbeamercolor*{example text}{fg=green!60!black}
\setbeamercolor*{alerted text}{fg=orange!85!black}

\setbeamercolor{palette primary}{use={structure,normal text},fg=structure.fg,bg=normal text.bg!75!black}
\setbeamercolor{palette secondary}{use={structure,normal text},fg=structure.fg,bg=normal text.bg!60!black}
\setbeamercolor{palette tertiary}{use={structure,normal text},fg=structure.fg,bg=normal text.bg!45!black}
\setbeamercolor{palette quaternary}{use={structure,normal text},fg=structure.fg,bg=normal text.bg!30!black}

\setbeamercolor*{block body}{bg=structure.fg!60!black}
\setbeamercolor*{block body alerted}{bg=alerted text.fg!40!black}
\setbeamercolor*{block body example}{bg=example text.fg!40!black}
\setbeamercolor*{block title}{parent=structure,fg=structure.fg!65!white, bg=structure.fg!40!black}
\setbeamercolor*{block title alerted}{use={normal text,alerted text},fg=alerted text.fg!75!normal text.fg,bg=alerted text.fg!20!black}
\setbeamercolor*{block title example}{use={normal text,example text},fg=example text.fg!75!normal text.fg, bg=example text.fg!20!black}


\setbeamercolor{item projected}{fg=black}

\setbeamercolor*{sidebar}{parent=palette primary}

\setbeamercolor{palette sidebar primary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar secondary}{use=structure,fg=structure.fg}
\setbeamercolor{palette sidebar tertiary}{use=normal text,fg=normal text.fg}
\setbeamercolor{palette sidebar quaternary}{use=structure,fg=structure.fg}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}

